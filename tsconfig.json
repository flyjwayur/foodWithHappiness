{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "dom"],
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // Skip type checking of all declaration files
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"],
    "resolveJsonModule": true
  },
  "include": ["src"]
}
